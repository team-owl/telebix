@{
    ViewData["Title"] = "Home Page";
}

    <div class="jumbotron">
        <div class="container">
            <h1 class="display-6">Telebix</h1>
            <p class="lead">Always there. Anytime. Anywhere.</p>
            <div class="container">
                <img class="mx-auto d-block img-fluid" src="~/images/pediatrics.png" alt="Baby health checkup" />
            </div>
            <hr class="my-4">
            <a class="btn btn-info btn-lg" asp-controller="Home" asp-action="About" role="button">Learn more</a>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="card">
                    <img class="card-img-top" src="~/images/risk.png" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">Risk Factors Analysis </h5>
                        <a asp-controller="Report" asp-action="RiskFactorsReport" class="btn btn-primary">Go to Report</a>
                        <p class="card-text">Broad overview of test results by risk factor</p>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="card">
                    <img class="card-img-top" src="~/images/coverage.png" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">Coverage Report</h5>
                        <a asp-controller="Report" asp-action="CoverageReport" class="btn btn-primary">Go to Report</a>
                        <p class="card-text">Key indicators about basic app usage</p>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="card">
                    <img class="card-img-top" src="~/images/stat.png" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">Statistical Analysis</h5>
                        <a asp-controller="Report" asp-action="StatReportIndex" class="btn btn-primary">Go to Report</a>
                        <p class="card-text">Statistical analysis of risk factors</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="card">
                    <img class="card-img-top" src="~/images/error_phone.png" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">Error Report</h5>
                        <a asp-controller="Report" asp-action="ErrorReport" class="btn btn-primary">Go to Report</a>
                        <p class="card-text">Central logging of application errors</p>
                    </div>
                </div>
            </div>

