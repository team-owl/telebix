@model IEnumerable<Telebix.Models.AppEvent>

@{
    ViewData["Title"] = "Application Log Detail";
}

<div class="container-fluid">
    <div class="row">
        <partial name="_ReportNav" />

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Application Log Detail</h1>
                <partial name="_ShareExport" />
            </div>
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
                <table class="table-striped">
                    <thead>
                        <tr>
                            <th>
                                Clinic Name
                            </th>
                            <th>
                                # Successful
                            </th>
                            <th>
                                # Failed
                            </th>
                            <th>
                                Failure Rate
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            //Group results by clinic
                            var groups = from appEv in Model
                                         group appEv by appEv.ClinicName into clinicGroup
                                         orderby clinicGroup.Key
                                         select clinicGroup;
                        }

                        @foreach (var clinic in groups)
                        {
                            <tr>
                                <td>@clinic.Key</td>
                                <td>@clinic.Count(e => e.Success == true)</td>
                                <td>@clinic.Count(e => e.Success == false)</td>
@*                                @{ clinic.Count(e => e.Success == true) / clinic.Count(e => e.Success == true); }*@
                            </tr>

                        }

